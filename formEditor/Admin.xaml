<Window x:Class="formEditor.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:formEditor"
        mc:Ignorable="d"
        Title="Admin" Height="200" Width="800">
    <Grid  >
        <ComboBox Name="Blocks" HorizontalAlignment="Left" Margin="89,61,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Blocks_SelectionChanged"/>
        <TextBox Name="Timeout" HorizontalAlignment="Left" Height="23" Margin="265,61,0,0" TextWrapping="Wrap" Text="time in minutes" VerticalAlignment="Top" Width="44"/>
        <Button Name="Save" Content="Save" HorizontalAlignment="Left" Margin="366,61,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <TextBox Style="{StaticResource MyWaterMarkStyle}" HorizontalAlignment="Left" Height="23" Margin="122,223,0,0" TextWrapping="Wrap" Text="Enter 10 digit number" VerticalAlignment="Top" Width="120"/>
        <Label Content="Select time in minutes for block completion " HorizontalAlignment="Left" Margin="192,10,0,0"  FontSize="20" VerticalAlignment="Top" Width="395"/>
        <Label Content="Press save after entering each block time " HorizontalAlignment="Left" Margin="215,103,0,0" VerticalAlignment="Top" Width="226"/>

    </Grid>
</Window>
